---
import Layout from '../../../layouts/Layout.astro';
import Navbar from "../../../components/Navbar.astro";
import Footer from "../../../components/Footer.astro";

export interface Props {
    frontmatter: {
        title: string;
        hero: {
            title: string;
            subtitle: string;
            description: string;
            image: string;
        };
        sections: Array<{
            title: string;
            items: Array<{
                title: string;
                description: string;
            }>;
        }>;
    };
}

const { frontmatter } = Astro.props;
---

<Layout title={`ARLA - ${frontmatter.title}`}>
    <Navbar />
    <main>
        <!-- Hero Section -->
        <section class="relative h-[70vh] overflow-hidden">
            <div class="absolute inset-0 bg-black/50 z-10"></div>
            <img
                src={frontmatter.hero.image}
                alt={frontmatter.title}
                class="absolute w-full h-full object-cover"
            />
            <div class="relative z-20 h-full flex items-center">
                <div class="container mx-auto px-4">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 font-poppins">
                        {frontmatter.hero.title}
                    </h1>
                    <p class="text-xl md:text-2xl text-white/90 mb-4 font-inter max-w-2xl">
                        {frontmatter.hero.subtitle}
                    </p>
                    <p class="text-lg text-white/80 font-inter max-w-2xl">
                        {frontmatter.hero.description}
                    </p>
                </div>
            </div>
        </section>

        <!-- Content Sections -->
        {frontmatter.sections.map((section) => (
            <section class="py-16 bg-white">
                <div class="container mx-auto px-4">
                    <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center font-poppins">
                        {section.title}
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                        {section.items.map((item) => (
                            <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
                                <h3 class="text-xl font-semibold text-gray-900 mb-4 font-poppins">
                                    {item.title}
                                </h3>
                                <p class="text-gray-600 font-inter">{item.description}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>
        ))}

        <!-- CTA Section -->
        <section class="py-16 bg-gray-50">
            <div class="container mx-auto px-4 text-center">
                <h2 class="text-3xl font-bold text-gray-900 mb-4 font-poppins">
                    ¿Listo para empezar?
                </h2>
                <p class="text-xl text-gray-600 mb-8 font-inter">
                    Contáctanos para discutir cómo podemos ayudarte
                </p>
                <a
                    href="/"
                    class="inline-block bg-arla-blue text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors duration-300"
                    onclick="console.log('Botón Contactar Ahora presionado'); window.location.href='/#contact'; return false;"
                >
                    Contactar Ahora
                </a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>


<style>
    section {
        scroll-margin-top: 4rem;
    }
</style>