 ---
import Layout from '../../../layouts/Layout.astro';
import Navbar from "../../../components/Navbar.astro";
import Footer from "../../../components/Footer.astro";

const pageData = {
    title: "Proyectos en Proceso",
    hero: {
        title: "Proyectos en Proceso",
        subtitle: "Seguimiento de Proyectos Activos",
        description: "Visualiza el estado actual de nuestros proyectos en desarrollo",
        image: "/Modelos Predictivos.jpeg"
    }
};
---

<Layout title={`ARLA - ${pageData.title}`}>
    <Navbar />
    <main>
        <!-- Hero Section -->
        <section class="relative h-[70vh] overflow-hidden">
            <div class="absolute inset-0 bg-black/50 z-10"></div>
            <img
                src={pageData.hero.image}
                alt={pageData.title}
                class="absolute w-full h-full object-cover"
            />
            <div class="relative z-20 h-full flex items-center">
                <div class="container mx-auto px-4">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 font-poppins">
                        {pageData.hero.title}
                    </h1>
                    <p class="text-xl md:text-2xl text-white/90 mb-4 font-inter max-w-2xl">
                        {pageData.hero.subtitle}
                    </p>
                    <p class="text-lg text-white/80 font-inter max-w-2xl">
                        {pageData.hero.description}
                    </p>
                </div>
            </div>
        </section>

        <!-- Progress Section -->
        <section class="py-16 bg-white">
            <div class="container mx-auto px-4 text-center">
                <div class="flex justify-center mb-8">
                    <svg class="w-24 h-24 text-arla-blue animate-spin-slow" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 mb-6 font-poppins">
                    Proyecto en Desarrollo
                </h2>
                <p class="text-xl text-gray-600 mb-8 font-inter max-w-2xl mx-auto">
                    Estamos trabajando arduamente para completar este proyecto. Pronto podrás ver todos los detalles aquí.
                </p>
                <div class="bg-gray-100 p-6 rounded-lg max-w-2xl mx-auto">
                    <div class="space-y-4">
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-gray-700 font-semibold">Progreso General</span>
                                <span class="text-arla-blue font-semibold">65%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2.5">
                                <div class="bg-arla-blue h-2.5 rounded-full" style="width: 65%"></div>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
                            <div class="p-4 bg-white rounded-lg shadow">
                                <h3 class="font-semibold text-gray-800">Fase de Diseño</h3>
                                <p class="text-arla-blue font-bold">Completado</p>
                            </div>
                            <div class="p-4 bg-white rounded-lg shadow">
                                <h3 class="font-semibold text-gray-800">Desarrollo</h3>
                                <p class="text-arla-blue font-bold">En Proceso</p>
                            </div>
                            <div class="p-4 bg-white rounded-lg shadow">
                                <h3 class="font-semibold text-gray-800">Pruebas</h3>
                                <p class="text-gray-500">Pendiente</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-16 bg-gray-50">
            <div class="container mx-auto px-4 text-center">
                <h2 class="text-3xl font-bold text-gray-900 mb-4 font-poppins">
                    ¿Quieres saber más?
                </h2>
                <p class="text-xl text-gray-600 mb-8 font-inter">
                    Contáctanos para obtener más información sobre este proyecto
                </p>
                <a
                    href="/"
                    class="inline-block bg-arla-blue text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors duration-300"
                    onclick="window.location.href='/#contact'; return false;"
                >
                    Contactar Ahora
                </a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    section {
        scroll-margin-top: 4rem;
    }
    .animate-spin-slow {
        animation: spin 3s linear infinite;
    }
    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>