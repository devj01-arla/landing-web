---
const services = [
  {
    name: "Data Engineering & BI",
    href: "/Footer/services/DATA_E",
    icon: "/icon-Bi.svg"
  },
  {
    name: "Cloud & On-Premise",
    href: "/Footer/services/CLOUD",
    icon: "/icon-nube.svg"
  },
  {
    name: "Data Science & ML",
    href: "/Footer/services/SCIENCE",
    icon: "/icon-datos.svg"
  },
  {
    name: "Process Optimization",
    href: "/Footer/services/PROCESS",
    icon: "/icon-automatizacion.svg"
  },
  {
    name: "Dashboards DV",
    href: "/Footer/services/DASHBOARDS",
    icon: "/icon-visualizacion.svg"
  }
];
---

<div class="relative group" x-data="{ open: false }">
  <!-- Versión de escritorio -->
  <div class="hidden md:block relative">
    <button
      class="text-gray-700 hover:text-arla-blue font-medium transition-colors duration-200 flex items-center"
    >
      Servicios
      <svg
        class="ml-1 w-4 h-4 transition-transform duration-200 group-hover:rotate-180"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"
        />
      </svg>
    </button>

    <div
      class="absolute left-0 mt-2 w-64 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
    >
      <div class="py-2">
        {services.map((service) => (
          <a
            href={service.href}
            class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-arla-blue transition-colors duration-200"
          >
            <img src={service.icon} alt={service.name} class="w-5 h-5 mr-3" />
            {service.name}
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Versión móvil -->
  <div class="md:hidden">
    <button
      @click="open = !open"
      class="w-full text-gray-700 hover:text-arla-blue font-medium transition-colors duration-200 flex items-center justify-between px-4 py-2 border-b border-gray-200"
    >
      <span class="flex items-center">
        <span>Servicios</span>
      </span>
      <svg
        class="w-5 h-5 transition-transform duration-300 ease-in-out"
        :class="{ 'transform rotate-180': open }"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"
        />
      </svg>
    </button>

    <div
      x-show="open"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 max-h-0"
      x-transition:enter-end="opacity-100 max-h-screen"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 max-h-screen"
      x-transition:leave-end="opacity-0 max-h-0"
      class="bg-white overflow-hidden"
      style="display: none;"
    >
      <div class="py-2">
        {services.map((service) => (
          <a
            href={service.href}
            class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-arla-blue transition-colors duration-200"
          >
            <img src={service.icon} alt={service.name} class="w-5 h-5 mr-3" />
            {service.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</div>