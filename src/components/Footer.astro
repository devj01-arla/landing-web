---
import footerData from '../data/es/modules/footer.json';
import { logo } from '../data/es/modules/navbar.json';
---

<footer id="footer" class="bg-gray-900 text-white">
    <div class="mx-auto max-w-screen-xl space-y-8 px-4 py-16 sm:px-6 lg:space-y-16 lg:px-8">
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
            <div>
                <div class="flex items-center transition-all duration-300">
                    <a href={logo.href} class="flex items-center">
                        <img src={logo.img} alt={logo.alt} class="h-8 w-auto mr-2" />
                        <span class="text-m font-semibold font-poppins">{logo.title}</span>
                    </a>
                </div>
                <p class="mt-4 max-w-xs text-gray-300">
                    {footerData.sections[0].description}
                </p>

                <ul class="mt-8 flex gap-6">
                    {footerData.sections[0].socialLinks?.map(link => (
                        <li>
                            <a href={link.url} rel="noopener noreferrer" target="_blank" class="text-gray-300 transition hover:opacity-75">
                                <span class="sr-only">{link.name}</span>
                                <svg class="size-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d={link.iconPath}></path>
                                </svg>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:col-span-2 lg:grid-cols-5">
                {footerData.sections.slice(1).map(section => (
                    <div>
                        <p class="font-medium text-white">{section.title}</p>
                        <ul class="mt-6 space-y-4 text-sm">
                            {section.links?.map(link => (
                                <li>
                                    <a href={link.url} class="text-gray-300 transition hover:opacity-75">
                                        {link.text}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </div>

        <p class="text-xs text-gray-300">
            {footerData.copyright}
        </p>
    </div>
</footer>